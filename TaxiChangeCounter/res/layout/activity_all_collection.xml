<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	 xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/frameLayout"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_margin="0dp"
	 android:padding="0dp"
	 tools:context=".ChangeCollectionActivity" 
	 android:background="@drawable/default_background"
	     >
	 
	  <ScrollView
	      android:id="@+id/scrollView"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:layout_gravity="top"
	      android:layout_marginBottom="46dp">
	      
	      <LinearLayout 
	          android:id="@+id/allCollectionsLinearLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_margin="0dp"
	          >
	          
	          <ImageView 
	              android:id="@+id/instructionsImage"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:src="@drawable/instruction_image_0001"
	              android:layout_gravity="right"
	              android:layout_marginTop="5dp"
	              android:layout_marginRight="50dp"
	              android:scaleType="fitStart"
	              android:contentDescription="@string/instructions_content_desc"
	              />
	          
	      </LinearLayout>
	      
	  </ScrollView>
	  
	  <LinearLayout 
	      android:id="@+id/totalsDisplayView"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:layout_gravity="bottom"
	      android:orientation="horizontal"
	      android:layout_margin="0dp"
	      android:background="@color/black_color"
	      >
	      
	       <TextView
	       android:id="@+id/totalDueToTaxiDriver"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:paddingTop="12dp"
	       android:paddingBottom="12dp"
	       android:textSize="@dimen/medium_font_size"
	       android:textColor="@color/white_color"
	       android:textStyle="bold"
	       android:gravity="center"
	    />
	      
	  </LinearLayout>
	 </FrameLayout>
	
	
