<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsepo.android.taxichange"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:persistent="true">
        
        <activity
            android:name="com.tsepo.android.taxichange.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.tsepo.android.taxichange.activity.CollectionActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_collections"
            android:screenOrientation="portrait">
        </activity>
    
        <activity
            android:name="com.tsepo.android.taxichange.activity.AboutActivity"
            android:label="@string/title_activity_about" 
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
